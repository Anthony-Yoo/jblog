<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="jblogUser">

	<!-- 유져 가입 -->
	<insert id="insert" parameterType="com.jblog.vo.UserVo">
		<![CDATA[
			insert into users 
			values (
			seq_users_no.nextval,
			#{id},
			#{userName},
			#{password},
			sysdate
			)		
		]]>
	
	</insert>
	<!-- 	회원확인(Id) -->
	<select id="selectId" parameterType="String" resultType="com.jblog.vo.UserVo">
		<![CDATA[
				select userNo,
					   id,
					   userName,					   
					   password,					   
					   joinDate
				from users
				where id = #{id}
		]]>	
	</select>	

</mapper>
